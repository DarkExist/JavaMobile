<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32px"
    android:background="@drawable/custom_border">

    <TextView
        android:id="@+id/QuoteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Здесь будет длинный текст, который поначалу обрезается с троеточием.Здесь будет длинный текст, который поначалу обрезается с троеточием.Здесь будет длинный текст, который поначалу обрезается с троеточием"
        android:textSize="48px" />

    <ImageView
        android:id="@+id/QuoteToggleButton"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:padding="12px"
        android:layout_marginTop="32px"
        android:layout_gravity="center"
        android:src="@drawable/arrow_down_82_26"
/>
<!--        android:visibility="gone"-->

</LinearLayout>